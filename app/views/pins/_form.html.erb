    <%= f.label :description, " Description (Optional)" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Upload", class: "landing-button btn-block" %>
  </div>
<% end %>
</div>